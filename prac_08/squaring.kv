BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 40
            multiline: False
        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)
    Label:
        text: "Enter a number and press 'Square'"
    Label:
        id: output_label
        font_size: 40
        color: 1, 0, 1, 1


